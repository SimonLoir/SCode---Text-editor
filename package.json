{
  "name": "scode",
  "version": "0.1.2",
  "description": "A smart code editor",
  "main": "main.js",
  "repository": "https://github.com/SimonLoir/SCode-Text-editor",
  "scripts": {
    "test": "electron .",
    "win-64": "electron-packager . --arch=x64 --plateform=win32 --electron-version=1.7.5 --out=releases --asar --icon=src/logo.ico --overwrite --ignore=releases/",
    "win-32": "electron-packager . --arch=ia32 --plateform=win32 --electron-version=1.7.5 --out=releases --asar --icon=src/logo.ico --overwrite --ignore=releases/",
    "dist": "build"
  },
  "author": "Simon Loir",
  "license": "ISC",
  "build": {
    "appId": "simonloir.be.scode.software",
    "win": {
      "target": "nsis",
      "icon": "src/logo.ico"
    }
  },
  "dependencies": {
    "jslint": "^0.11.0",
    "nodegit": "^0.20.1"
  }
}
